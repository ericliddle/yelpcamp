<% include partials/header %>
<div class="container">
  <h1 class="add-campground-title">Create a new Campground</h1>
    <div class="add-campground-form">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Name" name="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Image URL" name="image">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Description" name="description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Add a Campground</button>
        </div>
      </form>
      <a href="/">Home</a>
    </div>
</div>
<% include partials/footer %>