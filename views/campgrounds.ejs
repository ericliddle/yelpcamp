<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand-picked Campgrounds form all over the world!</p>
      <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a></p>
    </div>  
  </header>

  <div class="row camp-thumbnails">
    <% campgrounds.forEach((campground) => { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campground.image %>"  alt="">
          <div class="caption">
            <h4><%= campground.name %></h4>
          </div>
        </div>    
      </div>
    <% }) %>
  </div>
  <a href="/">Home</a>
</div>


<% include partials/footer %>